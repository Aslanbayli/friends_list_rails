
<% if user_signed_in? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <%# <th>User id</th> %>
        <th>Tools</th>
      </tr>
    </thead>



    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td>
              <%= link_to friend.first_name + ' ' + friend.last_name, friend, class:'link2' %>
            </td>  
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <%#= friend.user_id %>
            <%#= link_to 'Show', friend, class:'link1' %>
            <%#= link_to 'Edit', edit_friend_path(friend), class:'link1' %>
            <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:'link1', class:"btn btn-outline-danger btn-sm" %></td> 
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

    <style>
      /* thead{
        text-align: center;
      } */

      .link1{
        text-decoration: none;
      }

      .link2{
        color: var(--bs-table-striped-color);
        text-decoration: none; 
      }
    </style>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
<% else %>
  <h1>Welcome to the friends app!</h1>
  <p>Here you can create, view, update, and delete friends from your list.</p>
<% end %>
